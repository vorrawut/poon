{
  "name": "poon",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env VITE_APP_ENV=development vite",
    "local": "cross-env VITE_APP_ENV=local vite",
    "build": "tsc -b && vite build",
    "build:dev": "cross-env VITE_APP_ENV=development npm run build",
    "build:prod": "cross-env VITE_APP_ENV=production NODE_ENV=production npm run build",
    "preview": "vite preview",
    "preview:prod": "cross-env VITE_APP_ENV=production vite preview",
    "start": "npm run dev",
    "lint": "eslint src --ignore-pattern 'react-bits/**' --max-warnings=50 --rule '@typescript-eslint/no-explicit-any: off'",
    "lint:fix": "eslint src --ignore-pattern 'react-bits/**' --fix --max-warnings=50 --rule '@typescript-eslint/no-explicit-any: off'",
    "lint:check": "eslint src --ignore-pattern 'react-bits/**' --max-warnings=50 --rule '@typescript-eslint/no-explicit-any: off'",
    "lint:strict": "eslint src --ignore-pattern 'react-bits/**' --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage --run",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rimraf dist coverage .nyc_output",
    "analyze": "cross-env ANALYZE=true npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-router": "^1.132.7",
    "@types/react-router-dom": "^5.3.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.22",
    "gsap": "^3.13.0",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-router-dom": "^7.9.3",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  }
}
